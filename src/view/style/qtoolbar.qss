QToolBar {
    background-color: #333333;
    border-bottom: 2px solid QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFF00, stop: 0.2 #FF0000, stop: 0.4 #FF00FF, stop: 0.6 #0000FF, stop: 0.8 #00FFFF, stop: 1 #00FF00);
    spacing: 7px;
}

QToolBar::separator {
    background-color : QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #333333, stop: 0.2 #444444, stop: 0.5 #555555, stop: 0.8 #444444, stop: 1 #333333);

    margin-bottom: 7px;
    margin-top: 5px;

}